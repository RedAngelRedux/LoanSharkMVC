@model LoanSharkMVC.Models.Loan

<div class="container">

    <h1 class="mb-2">Loan Caluculator</h1>

    <div class="row">
        <div class="col">
            <form asp-controller="Home" asp-action="App" method="post">
                <div class="form-row">
                    <div class="form-group col-12">
                        <label asp-for="Amount">Loan Amount</label>
                        <input tupe="number" class="form-control" id="lAmount" min="1000" step="500" value="@Model.Amount" asp-for="Amount" />
                    </div>
                    <div class="form-group col-12">
                        <label asp-for="Term">Term</label>
                        <input tupe="number" class="form-control" id="lTerm" min="1" value="@Model.Term" asp-for="Term" />
                    </div>
                    <div class="form-group col-12">
                        <label asp-for="Rate">Rate</label>
                        <input tupe="number" class="form-control" id="lRate" min="1.00" value="@Model.Rate" asp-for="Rate" />
                    </div>
                </div>
                <button type="submit" class="btn btn-dark mt-2">Calculate</button>
            </form>
        </div>
        <div class="col">
            <div id="paymentTitle">
                <p>Your Monthly Payments</p>
            </div>
            <p id="payment">@Model.Payment.ToString("C")</p>
            <div class="row">
                <div class="col-6">
                    <label class="text-left">Total Principal</label>
                </div>
                <div class="col6 text-right" id="ttlPrincipal">
                    @Model.Amount.ToString("C")
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <label class="text-left">Total Interest</label>
                </div>
                <div class="col6 text-right" id="ttlInterest">
                    @Model.TotalInterest.ToString("C")
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <label class="text-left">Total Cost</label>
                </div>
                <div class="col6 text-right" id="ttlCost">
                    @Model.TotalCost.ToString("C")
                </div>
            </div>
        </div>
    </div>
    @if(Model.Payments.Count > 0)
    {
        <div class="row">
            <div class="col">
                <table id="schedule" class="table table-striped table-hover">
                    <thead class="text-white">
                        <tr>
                            <th>Month</th>
                            <th>Payment</th>
                            <th>Pricipal</th>
                            <th>Interest</th>
                            <th>Total Interest</th>
                            <th>Balance</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model.Payments)
                        {
                            
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>
