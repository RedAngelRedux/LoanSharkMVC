@model LoanSharkMVC.Models.Loan

<div class="container">

    <h1 class="mb-2">Loan Caluculator</h1>

    <div class="row"> @* Row Containing Input Form and Loan Breakdown*@

        <div class="col-6"> @* Column Containing Input Form*@
            <form class="loanForm" asp-controller="Home" asp-action="App" method="post">
                <div class="form-row">
                    <div class="form-group col-12">
                        <label asp-for="Amount">Loan Amount</label>
                        <input tupe="number" class="form-control" id="lAmount" min="1000" step="500" value="@Model.Amount" asp-for="Amount" />
                    </div>
                    <div class="form-group col-12">
                        <label asp-for="Term">Term</label>
                        <input tupe="number" class="form-control" id="lTerm" min="1" value="@Model.Term" asp-for="Term" />
                    </div>
                    <div class="form-group col-12">
                        <label asp-for="Rate">Rate</label>
                        <input tupe="number" class="form-control" id="lRate" min="1.00" step="0.25" value="@Model.Rate" asp-for="Rate" />
                    </div>
                </div>
                <button type="submit" class="btn btn-cfOrange mt-2">Calculate</button>
            </form>
        </div>

        <div class="col-6"> @* Column Containing Loan Breakdown*@

            <div id="paymentTitle">
                <p mt-0>Your Monthly Payments</p>
            </div>

            <p id="payment" class="mt-0">@Model.Payment.ToString("C")</p>

            <div id="loanBreakDown">
                <div class="row">
                    @* Row Containing Total Principal Info*@
                    <div class="col-6">
                        <label>Total Principal</label>
                    </div>
                    <div class="col-6">
                        <label>@Model.Amount.ToString("C")</label>
                    </div>
                </div>

                <div class="row">
                    @* Row Containing Total Interest Info*@
                    <div class="col-6">
                        <label>Total Interest</label>
                    </div>
                    <div class="col-6">
                        <label>@Model.TotalInterest.ToString("C")</label>
                    </div>
                </div>

                <div class="row">
                    @* Row Containing Total Cost Info*@
                    <div class="col-6">
                        <label>Total Cost</label>
                    </div>
                    <div class="col-6" id="ttlCost">
                        <label>@Model.TotalCost.ToString("C")</label>
                    </div>
                </div>

            </div>

        </div>

    </div>

    @if (Model.Payments.Count > 0)
    {
        <div class="row">
            <div class="col">
                <table id="schedule" class="table table-striped table-hover">
                    <thead class="text-white" id="tableHeader">
                        <tr>
                            <th>Month</th>
                            <th>Payment</th>
                            <th>Pricipal</th>
                            <th>Interest</th>
                            <th>Total Interest</th>
                            <th>Balance</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Payments)
                        {
                            <tr>
                                <td>@item.Month</td>
                                <td>@item.Payment</td>
                                <td>@item.MonthlyPrincipal</td>
                                <td>@item.MonthlyInterest</td>
                                <td>@item.TotalInterest</td>
                                <td>@item.Balance</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }

</div>
